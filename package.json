    "react": "^16.8.3 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.3 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "bundlesize": [
    {
      "path": "./dist/*.js",
